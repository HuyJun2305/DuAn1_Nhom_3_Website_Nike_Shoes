@model IEnumerable<AppView.Models.GioHangChiTiet>

@{
    ViewData["Title"] = "Giỏ hàng";
}

<h2>Giỏ hàng của bạn</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<form asp-action="XacNhanThanhToan" method="post">
    <table class="table">
        <thead>
            <tr>
                <th>Chọn</th>
                <th>Ảnh</th>
                <th>Tên Sản Phẩm</th>
                <th>Giá</th>
                <th>Số Lượng</th>
                <th>Thao Tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="selectedProductIds" value="@item.Id" />
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.SanPham.ImgFile))
                        {
                            <img src="@Url.Content(item.SanPham.ImgFile)" alt="Hình ảnh sản phẩm" style="width:100px;height:auto;" />
                        }
                        else
                        {
                            <span>Không có hình ảnh</span>
                        }
                    </td>
                    <td>@item.SanPham.Ten</td>
                    <td>@item.SanPham.Gia</td>
                    <td>@item.SoLuong</td>
                    <td>
                        <a href="@Url.Action("RemoveFromCart", "GioHangChiTiet", new { id = item.Id })" class="btn btn-danger">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">Thanh Toán</button>
</form>
