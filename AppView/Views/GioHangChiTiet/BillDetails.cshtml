@model AppView.ViewModels.HoaDonChiTietViewModel

@{
    ViewData["Title"] = "BillDetails";
}

<h3>Thông tin Hóa đơn</h3>
<p>Mã Hóa đơn: @Model.HoaDon.Id</p>
<p>Ngày tạo: @Model.HoaDon.NgayTao.ToString("dd/MM/yyyy")</p>
<p>Tổng tiền: @Model.HoaDon.TongTien.ToString("C")</p>
<p>Trạng thái: @(Model.HoaDon.TrangThai ? "Đã thanh toán" : "Chưa thanh toán")</p>

<h3>Thông tin Khách hàng</h3>
<p>Tên khách hàng: @Model.KhachHang.Ten</p>
<p>Email: @Model.KhachHang.Email</p>

<h3>Chi tiết Hóa đơn</h3>
<table class="table">
    <thead>
        <tr>
            <th>Tên sản phẩm</th>
            <th>Số lượng</th>
            <th>Giá</th>
            <th>Tổng</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.HoaDonChiTiets != null && Model.HoaDonChiTiets.Any())
        {
            foreach (var item in Model.HoaDonChiTiets)
            {
                <tr>
                    <td>@item.SanPham.Ten</td>
                    <td>@item.SoLuong</td>
                    <td>@item.Gia.ToString()</td>
                    <td>@(item.SoLuong * item.Gia)</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4">Không có dữ liệu</td>
            </tr>
        }
    </tbody>
</table>
