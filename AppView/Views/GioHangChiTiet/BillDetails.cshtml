@model AppView.ViewModels.HoaDonChiTietViewModel

@{
    ViewData["Title"] = "Chi Tiết Hóa Đơn";
}

<h2>Chi Tiết Hóa Đơn</h2>

<h3>Hóa Đơn: @Model.HoaDon.Id</h3>
<p>Ngày Tạo: @Model.HoaDon.NgayTao</p>
<p>Tổng Tiền: @Model.HoaDon.TongTien VNĐ</p>

<h4>Chi Tiết Hóa Đơn</h4>
<table class="table">
    <thead>
        <tr>
            <th>Tên Sản Phẩm</th>
            <th>Giá</th>
            <th>Số Lượng</th>
            <th>Tổng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.HoaDonChiTiets)
        {
            <tr>
                <td>@item.SanPham.Ten</td>
                <td>@item.Gia</td>
                <td>@item.SoLuong</td>
                <td>@(item.Gia * item.SoLuong)</td>
            </tr>
        }
    </tbody>
</table>

<p>Khách hàng: @Model.KhachHang.Ten</p>
