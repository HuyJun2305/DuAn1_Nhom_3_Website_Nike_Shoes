@model IEnumerable<AppView.Models.DonHang>
@{
    Layout = "AdminLayout";
}
<h2>Danh sách đơn hàng chờ xác nhận</h2>

<table class="table">
    <thead>
        <tr>
            <th>Ngày đặt</th>
            <th>Tên người nhận</th>
            <th>Số điện thoại</th>
            <th>Địa chỉ</th>
            <th>Tổng tiền</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.NgayTao.ToString("dd/MM/yyyy")</td>
                <td>@order.TenNguoiNhan</td>
                <td>@order.SoDienThoai</td>
                <td>@order.DiaChi</td>
                <td>@string.Format("{0:N0}₫", order.TongTien)</td>
                <td>
                    <a asp-action="ConfirmOrder" asp-route-id="@order.Id" class="btn btn-success">Xác nhận</a>
                </td>
            </tr>
        }
    </tbody>
</table>
