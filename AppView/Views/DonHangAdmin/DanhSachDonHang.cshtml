@model IEnumerable<AppView.Models.DonHang>

@{
    ViewData["Title"] = "Danh Sách Đơn Hàng";
    Layout = "AdminLayout";

}

<h2>Danh Sách Đơn Hàng</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Ngày Tạo</th>
            <th>Địa Chỉ</th>
            <th>Số Điện Thoại</th>
            <th>Phương Thức Thanh Toán</th>
            <th>Tổng Số Tiền</th>
            <th>Trạng Thái</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var donHang in Model)
        {
            <tr>
                <td>@donHang.NgayTao.ToString("dd/MM/yyyy")</td>
                <td>@donHang.DiaChi</td>
                <td>@donHang.SoDienThoai</td>
                <td>@donHang.PhuongThucThanhToan</td>
                <td>@string.Format("{0:N0}₫", @donHang.TongTien)</td>
                <td>@donHang.TrangThaiDonHang</td>
            </tr>
        }
    </tbody>
</table>
