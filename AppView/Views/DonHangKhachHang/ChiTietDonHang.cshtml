@model AppView.Models.DonHang

@{
    ViewData["Title"] = "Chi tiết Đơn Hàng";
}

<h2>Chi tiết Đơn Hàng</h2>

<div>
    <h4>Thông tin Đơn Hàng</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Mã Đơn Hàng
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            Khách Hàng
        </dt>
        <dd class="col-sm-10">
            @Model.KhachHang.UserName
        </dd>
        <dt class="col-sm-2">
            Ngày Tạo
        </dt>
        <dd class="col-sm-10">
            @Model.NgayTao
        </dd>
        <dt class="col-sm-2">
            Trạng Thái
        </dt>
        <dd class="col-sm-10">
            @Model.TrangThaiDonHang
        </dd>
        <dt class="col-sm-2">
            Tổng Tiền
        </dt>
        <dd class="col-sm-10">
            @Model.TongTien
        </dd>
        <dt class="col-sm-2">
            Tên Người Nhận
        </dt>
        <dd class="col-sm-10">
            @Model.TenNguoiNhan
        </dd>
        <dt class="col-sm-2">
            Số Điện Thoại
        </dt>
        <dd class="col-sm-10">
            @Model.SoDienThoai
        </dd>
        <dt class="col-sm-2">
            Địa Chỉ
        </dt>
        <dd class="col-sm-10">
            @Model.DiaChi
        </dd>
        <dt class="col-sm-2">
            Phương Thức Thanh Toán
        </dt>
        <dd class="col-sm-10">
            @Model.PhuongThucThanhToan
        </dd>
    </dl>
</div>

<div>
    <h4>Chi tiết Sản Phẩm</h4>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Tên Sản Phẩm
                </th>
                <th>
                    Số Lượng
                </th>
                <th>
                    Giá
                </th>
                <th>
                    Thành Tiền
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var chiTiet in Model.ChiTietDonHangs)
            {
                <tr>
                    <td>@chiTiet.SanPham.Ten</td>
                    <td>@chiTiet.SoLuong</td>
                    <td>@chiTiet.Gia</td>
                    <td>@string.Format("{0:N0}₫", @chiTiet.SoLuong * @chiTiet.Gia)</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <a asp-action="ViewDonHang">Quay lại danh sách</a>
</div>
